<div class="col-md-4 col-sm-6 col-xs-12">
  <a href="#"><h3><%= product.name %></h3></a>
  <p><%= product.description %></p>
  <p><%= image_tag(product.image_url, class:"img-responsive", size: "100") %></p>
  <p><%= product.colour %></p>
  <strong><%= product.price %> CHF</strong>
  <p><%= link_to 'Show', product %></p>
  <p><%= link_to 'Edit', edit_product_path(product) %></p>
  <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>

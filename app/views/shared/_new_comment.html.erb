
<% if signed_in? %>
  <h3>Add a review</h3>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <% f.label :body, "Comments" %>
      <%= f.text_area :body, class: "form-control", placeholder: "Comments", :required => true %>
    </p>
    
    <p>
      <% f.label :rating %>
      <%= f.text_field :rating, class: "rating form-control", placeholder: "Rating" %>
    </p>  
    <p>
      <%= f.submit "Submit", class: "form_label btn btn-primary btn-xs" %>
    </p>
  <% end %>
<% else %>
  <h3>Sign in to add a review</h3>
<% end %>
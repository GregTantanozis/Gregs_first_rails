<div class="container">

	<h1>Get in touch</h1>

	<div class="row">

		<div class="col-md-4 col-sm-12 contact-form">
			<%= flash[:notice] %>

			<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
			  <div class="form-group">
			    <%= form.label :name, class: "contact-form-titles" %>
			    <%= form.text_field :name, class: "form-control", placeholder: "Enter Name", :required => true %>
			  </div>
			  <div class="form-group">
			    <%= form.label :email, class: "contact-form-titles" %>
			    <%= form.text_field :email, class: "form-control", placeholder: "Enter Email", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
			  </div>
			  <div class="form-group">
			    <%= form.label :message, class: "contact-form-titles" %>
			    <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
			  </div>
			<%= form.submit "Send", class: "form_label" %>
			<% end %>
		</div>
	
	
		<div class="col-md-4 contact-details">
			<p>Daily 9:00 - 18:00 <br> +41 (0) 76 689 26 16 <br> tarzanbros@gmail.com <br> Austrasse 40 <br> 8953 Dietikon <br> Switzerland</p>
		</div>

		<div class="col-md-4 maps">
			Here we'll put the MAP!
		</div>
	</div>
</div>



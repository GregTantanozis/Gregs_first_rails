<div class="container">
  <div class="row">

    <div class="col-md-4 col-xs-12">
      <div class="product-info-box">
        <p id="notice"><%= notice %></p>
        <% cache @product do %>
          <p class="product-info-text", href="<%= @product.href %>">
            <h3><%= @product.name %></h3>
          <p class="product-info-text">
            <%= @product.genre %>, <%= @product.description %>, <%= number_to_currency(@product.price, unit: 'CHF ', precision: 2) %>
          </p>
          <p class="product-info-text">Highest Rating: 
            <div id="lowest-rating" class="rated" data-score="<%= @product.highest_rating_comment %>"></div>
          </p>
          <p class="product-info-text">Lowest Rating: <div id="lowest-rating" class="rated" data-score="<%= @product.lowest_rating_comment %>"></div>
          </p>
        <% end %>
      </div>
      <%= render 'comments' %>
    </div>

    <div class="col-md-4 col-xs-12">
      <div>
        <%= image_tag(@product.image_url, class:"img-responsive", size: "300", data_zoom_image: @product.image_url) %>
      </div>
    </div>

    <div class="col-md-4 col-xs-12">

      <%= render 'shared/new_comment' %>
      
      <div class="admin-links">
        <%= link_to 'Edit', edit_product_path(@product), class: "form_label" %>
        <%= link_to 'Back', products_path, class: "form_label" %>
      </div>
      
    </div>
  </div>
</div>
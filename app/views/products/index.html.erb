<title>Products</title>

<p id="notice"><%= notice %></p>
<h1>Products</h1>

<div class="container products">
  <div class="row">
    <% @products.each do |current_product| %>
    <%= render partial: "shared/product_item", locals: {product1: current_product} %>
    <% end %>
  </div>
  <br>
	<%= link_to 'New Product', new_product_path, class: "form_label btn btn-primary btn-xs" %>
  <br>
	<%= will_paginate @products %>
</div>
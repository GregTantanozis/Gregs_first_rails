<h1>Users</h1>
<div class="container">
  <div class="row">
    
    <p id="notice"><%= notice %></p>

    <div class="col-lg-12">
      <table>
        <thead>
          <tr class="users-title-name">
            <td>First name</td>
            <td>Last name</td>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr class="user-index">
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= link_to 'Show', user, class: "form_label btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: "form_label btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "form_label btn btn-primary btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New User', new_user_path, class: "form_label btn btn-primary btn-xs" %>

      <%= will_paginate @users %>
    </div>
  </div>
  <br>
</div>

<div class="container">
  <div class="row">
    <%= form_with(model: user, local: true) do |form| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <br>
      <div class="field">
        <% form.label :first_name %>
        <%= form.text_field :first_name, id: :user_first_name, class: "form-control", placeholder: "First name" %>
      </div>
      <br>
      <div class="field">
        <% form.label :last_name %>
        <%= form.text_field :last_name, id: :user_last_name, class: "form-control", placeholder: "Last name" %>
      </div>
      <br>
      <div class="actions">
        <%= form.submit "Create User", class: "form_label btn btn-primary btn-xs"%>
      </div>
    <% end %>
    <br>
  </div>
</div>

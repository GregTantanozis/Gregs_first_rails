<div class="container">
 
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-12"></div>
    <div class="col-md-4 col-md-offset-4 col-xs-12">

      <h2 class="form-signin-heading">Login</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "contact-form-titles sr-only" %>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "contact-form-titles sr-only" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "checkbox-label" %>
        <% end -%>

        <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>

      <% end %>

      <p class="devise-link-text"><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>


 